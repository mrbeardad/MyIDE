[
  // Explorer
  {
    "key": "l",
    "command": "list.toggleExpand",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "c",
    "command": "copyFilePath",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "o",
    "command": "revealFileInOS",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "tab",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorTextFocus && !inputFocus"
  },
  {
    "key": "ctrl+p",
    "command": "-list.focusUp",
    "when": "listFocus && !inputFocus"
  },

  // Search
  {
    "key": "ctrl+k ctrl+r",
    "command": "workbench.action.openRecent"
  },

  // Scroll
  {
    "key": "alt+f",
    "command": "scrollRight"
  },
  {
    "key": "alt+b",
    "command": "scrollLeft"
  },

  // Operation: Delete
  {
    "key": "alt+d",
    "command": "vscode-neovim.send",
    "args": "<M-d>",
    "when": "editorTextFocus && neovim.init"
  },
  {
    "key": "alt+c",
    "command": "vscode-neovim.send",
    "args": "<M-c>",
    "when": "editorTextFocus && neovim.init && (neovim.mode == 'normal' || neovim.mode == 'visual')"
  },
  {
    "key": "alt+j",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+k",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },

  // Operation: Multiple Cursor Edit
  {
    "key": "ctrl+shift+j",
    "command": "vscode-neovim.send",
    "args": "<C-S-J>",
    "when": "editorTextFocus && neovim.init && neovim.mode == 'normal'"
  },
  {
    "key": "ctrl+shift+n",
    "command": "vscode-neovim.send",
    "args": "<C-S-N>",
    "when": "editorTextFocus && neovim.init && neovim.mode == 'normal'"
  },
  {
    "key": "ctrl+shift+l",
    "command": "vscode-neovim.send",
    "args": "<C-S-L>",
    "when": "editorTextFocus && neovim.init"
  },

  // LSP
  {
    "key": "ctrl+n",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible && !editorHasSelection && neovim.init && neovim.mode == 'insert'"
  },
  {
    "key": "ctrl+p",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible && neovim.init && neovim.mode == 'insert'"
  },
  {
    "key": "ctrl+e",
    "command": "hideSuggestWidget",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "ctrl+e",
    "command": "editor.action.inlineSuggest.hide",
    "when": "inlineEditIsVisible || inlineSuggestionVisible"
  },

  // Copilot
  {
    "key": "tab",
    "command": "-vscode-neovim.send",
    "when": "neovim.init && neovim.recording || editorTextFocus && neovim.init && neovim.mode != 'insert' && editorLangId not in 'neovim.editorLangIdExclusions'"
  },
  {
    "key": "tab",
    "command": "vscode-neovim.send",
    "when": "neovim.init && neovim.recording || editorTextFocus && neovim.init && neovim.mode != 'insert' && editorLangId not in 'neovim.editorLangIdExclusions' && !inlineEditIsVisible",
    "args": "<Tab>"
  },
  {
    "key": "escape",
    "command": "-vscode-neovim.escape",
    "when": "editorTextFocus && neovim.init && !dirtyDiffVisible && !findWidgetVisible && !inReferenceSearchEditor && !markersNavigationVisible && !notebookCellFocused && !notificationCenterVisible && !parameterHintsVisible && !referenceSearchVisible && neovim.mode == 'normal' && editorLangId not in 'neovim.editorLangIdExclusions'"
  },
  {
    "key": "escape",
    "command": "vscode-neovim.escape",
    "when": "editorTextFocus && neovim.init && !dirtyDiffVisible && !findWidgetVisible && !inReferenceSearchEditor && !markersNavigationVisible && !notebookCellFocused && !notificationCenterVisible && !parameterHintsVisible && !referenceSearchVisible && neovim.mode == 'normal' && editorLangId not in 'neovim.editorLangIdExclusions' && !inlineEditIsVisible"
  },

  // Misc
  {
    "key": "ctrl+k ctrl+k",
    "command": "bookmarks.toggle",
    "when": "editorTextFocus"
  },

  // Any shortcut with prefix ctrl+k should put before this key
  {
    "key": "ctrl+k",
    "command": "vscode-neovim.send",
    "args": "<C-K>",
    "when": "editorTextFocus && neovim.ctrlKeysInsert.k && neovim.init && neovim.mode == 'insert' && editorLangId not in 'neovim.editorLangIdExclusions'"
  }
]

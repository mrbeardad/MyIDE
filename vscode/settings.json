{
  "settingsSync.ignoredSettings": [
    "workbench.colorTheme",
    "editor.minimap.scale"
  ],
  "settingsSync.ignoredExtensions": ["johnstoncode.svn-scm", "vue.volar"],

  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.hover.delay": 100,
  "editor.hover.hidingDelay": 0,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [120],
  "editor.smoothScrolling": true,
  "editor.unfoldOnClickAfterEndOfLine": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 5,
  "editor.fontFamily": "SauceCodePro Nerd Font",
  "editor.formatOnSave": true,
  "editor.minimap.autohide": "mouseover",
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on"
  },
  "editor.acceptSuggestionOnEnter": "off",
  "editor.suggest.preview": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestSelection": "recentlyUsed",
  "editor.tabCompletion": "on",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "string",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  "workbench.list.smoothScrolling": true,
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorCustomizations": {
    "[Noctis Sereno]": {
      "statusBar.foreground": "#b9d3d6",
      "statusBar.background": "#005f5f",
      "statusBar.debuggingForeground": "#a9c1c4",
      "statusBar.debuggingBackground": "#396336",
      "statusBarItem.hoverBackground": "#007d7d",
      "editor.findMatchBackground": "#40bf6acc",
      "editor.findMatchHighlightBackground": "#0e6571cc",
      "editorWidget.background": "#083d44cc"
    },
    "[Noctis Hibernus]": {
      "editorWidget.background": "#e0eff1bb"
    }
  },
  "workbench.preferredDarkColorTheme": "Noctis Sereno",
  "workbench.preferredHighContrastColorTheme": "Noctis Sereno",
  "workbench.preferredHighContrastLightColorTheme": "Noctis Hibernus",
  "workbench.preferredLightColorTheme": "Noctis Hibernus",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.expandMode": "doubleClick",
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.revealIfOpen": true,

  "window.autoDetectColorScheme": true,
  "window.openFilesInNewWindow": "default",

  "explorer.confirmDelete": false,

  "outline.collapseItems": "alwaysCollapse",
  "outline.showTypeParameters": false,
  "outline.showVariables": false,

  "search.showLineNumbers": true,
  "search.smartCase": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/third_party": true,
    "**/vendor": true,
    "**/venv/": true,
    "**/build": true,
    "**/dist": true,
    "**/out": true,
    "**/output": true,
    "**/release": true,
    "**/releases": true,
    "**/static": true,
    "**/target": true,
    "**/CHANGELOG": true,
    "**/CHANGELOG.*": true,
    "**/*.min.*": true,
    "**/*.map": true,
    "**/*.{asar,3ds,3g2,3gp,7z,a,aac,adp,ai,aif,aiff,alz,ape,apk,ar,arj,asf,au,avi,bak,baml,bh,bin,bk,bmp,btif,bz2,bzip2,cab,caf,cgm,class,cmx,cpio,cr2,csv,cur,dat,dcm,deb,dex,djvu,dll,dmg,dng,doc,docm,docx,dot,dotm,dra,DS_Store,dsk,dts,dtshd,dvb,dwg,dxf,ecelp4800,ecelp7470,ecelp9600,egg,eol,eot,epub,exe,f4v,fbs,fh,fla,flac,fli,flv,fpx,fst,fvt,g3,gif,graffle,gz,gzip,h261,h263,h264,icns,ico,ief,img,ipa,iso,jar,jpeg,jpg,jpgv,jpm,jxr,key,ktx,lha,lib,lvp,lz,lzh,lzma,lzo,m3u,m4a,m4v,mar,mdi,mht,mid,midi,mj2,mka,mkv,mmr,mng,mobi,mov,movie,mp3,mp4,mp4a,mpeg,mpg,mpga,mxu,nef,npx,numbers,o,oga,ogg,ogv,otf,pages,pbm,pcx,pdb,pdf,pea,pgm,pic,png,pnm,pot,potm,potx,ppa,ppam,ppm,pps,ppsm,ppsx,ppt,pptm,pptx,psd,pya,pyc,pyo,pyv,qt,rar,ras,raw,resources,rgb,rip,rlc,rmf,rmvb,rtf,rz,s3m,s7z,scpt,sgi,shar,sil,sketch,slk,smv,so,sub,swf,tar,tbz,tbz2,tga,tgz,thmx,tif,tiff,tlz,ttc,ttf,txz,udf,uvh,uvi,uvm,uvp,uvs,uvu,viv,vob,war,wav,wax,wbmp,wdp,weba,webm,webp,whl,wim,wm,wma,wmv,wmx,woff,woff2,wvx,xbm,xif,xla,xlam,xls,xlsb,xlsm,xlsx,xlt,xltm,xltx,xm,xmind,xpi,xpm,xwd,xz,z,zip,zipx}": true
  },

  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.mouseWheelScrollSensitivity": 0.5,
  "terminal.integrated.sendKeybindingsToShell": true,
  "terminal.integrated.suggest.enabled": false,

  "problems.showCurrentInStatus": true,

  "security.workspace.trust.enabled": false,

  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // prettier-ignore
  "vscode-neovim.ctrlKeysForInsertMode": ["w", "a", "e", "o", "h", "u", "d", "k", "r", "n"],
  // prettier-ignore
  "vscode-neovim.ctrlKeysForNormalMode": ["w", "d", "u", "b", "o", "i", "a", "x", "v", "r", "j", "n"],

  "[cpp]": {
    "editor.formatOnSave": false
  },
  "cmake.configureOnOpen": false,
  "cmake.ignoreCMakeListsMissing": true,
  "cmake.options.statusBarVisibility": "icon",
  "doxdocgen.generic.useGitUserEmail": true,
  "doxdocgen.generic.useGitUserName": true,

  "go.inlayHints.assignVariableTypes": true,
  "go.inlayHints.compositeLiteralFields": true,
  "go.inlayHints.compositeLiteralTypes": true,
  "go.inlayHints.constantValues": true,
  "go.inlayHints.functionTypeParameters": true,
  "go.inlayHints.parameterNames": true,
  "go.inlayHints.rangeVariableTypes": true,
  "go.lintTool": "golangci-lint",
  "go.toolsManagement.autoUpdate": true,

  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],

  "javascript.format.enable": false,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "typescript.format.enable": false,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "eslint.format.enable": false,

  "html.format.enable": false,
  "css.format.enable": false,
  "less.format.enable": false,
  "scss.format.enable": false,
  "json.format.enable": false,

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdown.copyFiles.destination": {
    "**/*.md": "${documentWorkspaceFolder}/images/${fileName}"
  },

  "protobuf.autoDetection.enabled": false,

  "git.autofetch": true,
  "git.confirmSync": false,
  "gitlens.graph.layout": "editor",
  "gitlens.blame.ignoreWhitespace": true,
  "gitlens.statusBar.enabled": false,
  "gitlens.graph.minimap.additionalTypes": [
    "stashes",
    "tags",
    "localBranches",
    "remoteBranches"
  ],
  "gitlens.launchpad.indicator.enabled": false,

  "todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
  "todo-tree.general.tags": [
    "TODO",
    "PERF",
    "OPTIMIZE",
    "FIXME",
    "FIX",
    "BUG",
    "REMOVE",
    "NOTE",
    "WARN",
    "WARNING",
    "XXX",
    "HACK"
  ],
  "todo-tree.general.tagGroups": {
    "PERF": ["OPTIMIZE"],
    "FIXME": ["FIX", "BUG"],
    "WARN": ["WARNING", "XXX"]
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check-circle",
      "fontStyle": "italic",
      "foreground": "#1a1b26",
      "background": "#0db9d7",
      "iconColour": "#0db9d7"
    },
    "PERF": {
      "icon": "stopwatch",
      "fontStyle": "italic",
      "foreground": "#1a1b26",
      "background": "#bb9af7",
      "iconColour": "#bb9af7"
    },
    "FIXME": {
      "icon": "bug",
      "fontStyle": "italic",
      "foreground": "#ddd",
      "background": "#db4b4b",
      "iconColour": "#db4b4b"
    },
    "REMOVE": {
      "icon": "trash",
      "fontStyle": "italic",
      "foreground": "#ddd",
      "background": "#db4b4b",
      "iconColour": "#db4b4b"
    },
    "HACK": {
      "icon": "flame",
      "fontStyle": "italic",
      "foreground": "#1a1b26",
      "background": "#e0af68",
      "iconColour": "#e0af68"
    },
    "WARN": {
      "icon": "alert",
      "fontStyle": "italic",
      "foreground": "#1a1b26",
      "background": "#e0af68",
      "iconColour": "#e0af68"
    },
    "NOTE": {
      "icon": "note",
      "fontStyle": "italic",
      "foreground": "#1a1b26",
      "background": "#1abc9c",
      "iconColour": "#1abc9c"
    }
  },
  "chat.viewSessions.orientation": "stacked"
}
